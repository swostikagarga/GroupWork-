@{
    ViewData["Title"] = "Whitelist Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Wishlist - BookMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .wishlist-container {
            max-width: 900px;
            margin: 40px auto;
            background: #fff;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            border-radius: 10px;
        }

        .wishlist-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }

            .wishlist-item:last-child {
                border-bottom: none;
            }

        .item-img {
            width: 70px;
            height: 90px;
            object-fit: cover;
            margin-right: 15px;
            border-radius: 4px;
        }

        .item-details {
            display: flex;
            align-items: center;
            flex: 2;
        }

        .item-info h5 {
            margin: 0;
            font-size: 1.1rem;
        }

        .item-info p {
            margin: 5px 0 0;
            font-size: 0.9rem;
            color: #666;
        }

        .btn-group {
            display: flex;
            gap: 10px;
        }

        .move-btn {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
        }

            .move-btn:hover {
                background-color: #212529;
            }

        .delete-btn {
            background: none;
            border: none;
            color: red;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .empty-message {
            text-align: center;
            padding: 40px 20px;
            font-size: 1.1rem;
            color: #666;
        }

        /* Toast Notification */
        .toast-container {
            position: center;
            top: 50px;
           right: 20px;
            z-index: 1000;
        }

        .toast {
            background-color: green;
            color: white;
            padding: 20px 25px;
            border-radius: 15px;
            margin-bottom: 20px;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.4s ease;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
</head>
<body>

    <div class="wishlist-container">
        <h3 class="mb-4 text-center">❤️ Your Wishlist</h3>

        <!-- Wishlist Items -->
        <div id="wishlistContent">
            <div class="wishlist-item">
                <div class="item-details">
                    <img src="~/lib/bootstrap/To Kill a Mockingbird.jpg" class="item-img" alt="To Kill a Mockingbird" />
                    <div class="item-info">
                        <h5>To Kill a Mockingbird</h5>
                        <p>$8.99</p>
                    </div>
                </div>
                <div class="btn-group">
                    <button class="move-btn">Move to Cart</button>
                    <button class="delete-btn">🗑️</button>
                </div>
            </div>

            <div class="wishlist-item">
                <div class="item-details">
                    <img src="~/lib/bootstrap/harrypotter.jpeg" class="item-img" alt="Harry Potter" />
                    <div class="item-info">
                        <h5>Harry Potter</h5>
                        <p>$10.50</p>
                    </div>
                </div>
                <div class="btn-group">
                    <button class="move-btn">Move to Cart</button>
                    <button class="delete-btn">🗑️</button>
                </div>
            </div>
        </div>

        <div id="emptyMessage" class="empty-message d-none">
            Your wishlist is empty.
        </div>
    </div>

    <!-- Toast Notifications -->
    <div class="toast-container" id="toastContainer"></div>

    <script>
        const wishlistContent = document.getElementById("wishlistContent");
        const emptyMessage = document.getElementById("emptyMessage");
        const toastContainer = document.getElementById("toastContainer");

        function updateEmptyMessage() {
            if (wishlistContent.children.length === 0) {
                emptyMessage.classList.remove("d-none");
            } else {
                emptyMessage.classList.add("d-none");
            }
        }

        function showToast(message) {
            const toast = document.createElement("div");
            toast.className = "toast show";
            toast.textContent = message;
            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.classList.remove("show");
                setTimeout(() => toast.remove(), 400);
            }, 2000);
        }

        document.querySelectorAll(".delete-btn").forEach(button => {
            button.addEventListener("click", () => {
                const item = button.closest(".wishlist-item");
                const title = item.querySelector("h5").innerText;
                item.remove();
                updateEmptyMessage();
                showToast(`"${title}" removed from wishlist`);
            });
        });

        document.querySelectorAll(".move-btn").forEach(button => {
            button.addEventListener("click", () => {
                const item = button.closest(".wishlist-item");
                const title = item.querySelector("h5").innerText;
                item.remove();
                updateEmptyMessage();
                showToast(`"${title}" moved to cart`);
            });
        });

        updateEmptyMessage();
    </script>

</body>
</html>

