@{
    ViewData["Title"] = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Books - BookMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>



        /* Reset and Base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fc;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .product-container {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 960px;
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            padding: 30px;
        }

        .product-image {
            flex: 1 1 300px;
        }

            .product-image img {
                width: 100%;
                border-radius: 10px;
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            }

        .product-info {
            flex: 1 1 300px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .product-info h1 {
                font-size: 2rem;
                color: #212529;
                margin-bottom: 15px;
            }

            .product-info .product-description {
                font-size: 1rem;
                color: #555;
                margin-bottom: 20px;
                line-height: 1.6;
            }

            .product-info .price {
                font-size: 1.5rem;
                font-weight: 600;
                color: #343a40;
                margin-bottom: 25px;
            }

        .btn-group {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 20px;
            font-size: 1rem;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: transform 0.2s ease, background-color 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        .btn-primary {
            background-color: #343a40;
            color: white;
        }

            .btn-primary:hover {
                background-color: #212529;
            }

        .btn-secondary {
            background-color: #dc3545;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #b02a37;
            }

        /* Toast notification */
        .toast-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #343a40;
            color: white;
            padding: 1rem 2rem;
            border-radius: 8px;
            z-index: 1050;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .toast-notification.show {
                opacity: 1;
                pointer-events: auto;
            }

        
        .product-info {
            align-items: center;
        }

        .btn-group {
            justify-content: center;
        }

        }
    </style>

</head>
<body>

    <div class="product-container">
        <!-- Product Image -->
        <div class="product-image">
            <img src="~/lib/bootstrap/book 1.jpg" alt="Product Image">
        </div>

        <!-- Product Information -->
        <div class="product-info">
            <h1>It ends with us</h1>
            <p class="product-description">
                As I sit here with one foot on either side of the ledge, looking down
                from twelve stories above the streets of Boston, I can’t help but think
                about suicide.
                Not my own. I like my life enough to want to see it through.
                I’m more focused on other people, and how they ultimately come
                to the decision to just end their own lives. Do they ever regret it?
            </p>
            <p class="price">$19.99</p>

            <!-- Buttons to Add to Cart and Wishlist -->
            <div class="btn-group">
                <button class="btn btn-primary" onclick="addToCart()">Add to Cart</button>
                <button class="btn btn-secondary" onclick="addToWishlist()">Add to Wishlist</button>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast-notification"></div>

    <script>
        // Show Toast Notification
        function showToast(message) {
            const toast = document.getElementById("toast");
            toast.textContent = message;
            toast.classList.add("show");
            setTimeout(() => toast.classList.remove("show"), 3000);
        }

        // Add to Cart
        function addToCart() {
            showToast('Product added to cart!');
        }

        // Add to Wishlist
        function addToWishlist() {
            showToast('Product added to wishlist!');
        }
    </script>
</body>
</html>
