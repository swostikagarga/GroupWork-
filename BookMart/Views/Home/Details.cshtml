@{
    ViewData["Title"] = "ProductDetails";
}

<div class="container mt-4">
    <h2 class="text-center">Book Details</h2>

    <!-- Book details section -->
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h3>@Model.Title</h3>
            <p class="text-muted">@Model.Author</p>
            <div class="rating mb-2">
                @for (var i = 0; i < 5; i++)
                {
                    <span>@(i < Model.Rating ? "&#9733;" : "&#9734;")</span>
                }
            </div>
            <p>@Model.Description</p>
            <p class="fw-bold">$@Model.Price</p>
            <button class="btn btn-primary" onclick='addToCart("@Model.Title", @Model.Price)'>Add to Cart</button>
            <button class="btn btn-outline-danger" onclick='addToWishlist("@Model.Title")'>♡ Wishlist</button>
        </div>
    </div>
</div>
